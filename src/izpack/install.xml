<!-- XML version -->


 <!--Izpack installation version -->
 <installation version="1.0">
 
 
	<!-- Add properties if required?
	<properties>
	</properties>
	-->
 
	<!--App Basic Info -->
	<info>
		<appname>Clotho</appname>
		<appversion>3.0</appversion>
		<url>http://www.clothocad.org/</url>
		<uninstaller path="${INSTALL_PATH}/uninstaller">yes</uninstaller>
		<requiresjdk>yes</requiresjdk>
		<javaversion>1.5</javaversion>
		<run-privileged>yes</run-privileged>
		
	</info>
	
	<!--Installer GUI-->
	<guiprefs width="640" height="480" resizable="no">
	<splash>images/cidarLogo.png</splash>
	<modifier key="useHeadingPanel" value="yes"/>
	<modifier key="headingImageOnLeft" value="yes"/>
	<modifier key="useButtonIcons" value="no"/>
	<modifier key="useLabelIcons" value="no"/>
	<modifier key="headingBackgroundColor" value="0x00FFFFFF"/>
	
	<laf name="substance">
		<os family="unix" />
		<param name="variant" value="mist-silver" />
    </laf>
	<laf name="substance">
		<os family="mac" />
		<param name="variant" value="mist-aqua" />
    </laf>
    <modifier key="useHeadingPanel" value="yes" />
	</guiprefs>
	
	
	<panels>
		<panel classname="HelloPanel"/>
		 <panel classname="LicencePanel"/>
		<panel classname="TargetPanel"/>
		<panel classname="PacksPanel"/>
		<panel classname="InstallPanel"/>
		<panel classname="FinishPanel"/>
	</panels>
 
	<packs>
	
	
		<pack name="Clotho EXE" required="yes">
			<description>The core files needed for the application</description>
			<fileset dir="resources/exe/" targetdir="${INSTALL_PATH}" override="true"/>
			<!-- <parsable targetfile="${INSTALL_PATH}/test.properties"/> -->
		</pack>
		
		<pack name="Clotho Source Files" required="yes">
			<description>The core files needed for the application</description>
			<fileset dir="src" targetdir="${INSTALL_PATH}" override="true"/>
			<!-- <parsable targetfile="${INSTALL_PATH}/test.properties"/> -->
		</pack>
		
		<pack name="MongoDB" required="yes">
			<description>Mongo DB installation</description>
			<fileset dir="resources/mongodb/win/mongodb_64win_2_4_10/" targetdir="${INSTALL_PATH}/mongodb" override="true"/>
			<!-- <parsable targetfile="${INSTALL_PATH}/test.properties"/> -->
		</pack>
		<pack name="MongoDB - Database Folder" required="yes">
			<description>Mongo DB - Database Folder</description>
			<fileset dir="resources/mongodb/dbFolder/data/" targetdir="${INSTALL_PATH}/mongodb/data" override="true"/>
			<!-- <parsable targetfile="${INSTALL_PATH}/test.properties"/> -->
		</pack>
		
		
		
		
	</packs>
	
	<!--Languages: English-->
	<locale>
		<langpack iso3="CustomLang"/>
	</locale>
	
	<resources>
		<res id="Heading.image" src="images/clothoLogo.png"/>
		<res id="LicencePanel.licence" src="resources/docs/licence.txt"/>
	</resources>
	
	<variables>
		<variable name="defWinDBdir" value = "C:/" />
		<variable name="defLinDBdir" value = "/" />
		<variable name="InstallerFrame.logfilePath" value="$INSTALL_PATH/ClothoInstall.log"/>
    <!-- This means that the log name will be My-install and that
  it will be stored at the root of the installation. -->
    <!-- Any path is fine. If value is set to "Default" then
  "$INSTALL_PATH/uninstall/install.log" is used. -->
    <!-- And if variable isn't defined then no log is written. -->
	<!-- <variable name="desktopshortcutcheckboxenabled" value="true"/> -->
    <!-- This automatically checks the "Create Desktop Shortcuts"
  button. Default value is "False". -->
	</variables>
	
	<conditions>
	    <condition type="variable" id="standardinstallation">
			<name>setup.type</name>
			<value>standard</value>
		</condition>
		<condition type="variable" id="expertinstallation">
			<name>setup.type</name>
			<value>expert</value>
		</condition>
	</conditions>
	
 </installation>